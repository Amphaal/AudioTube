{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "1. Fetch submodules",
            "type": "shell",
            "windows": {
                "command": "git submodule update --init --recursive"
            }
        },
        {
            "label": "2. Generate Project files",
            "group": {
                "isDefault": true,
                "kind": "test"
            },
            "dependsOn" : "1. Fetch submodules",
            "type": "shell",
            "windows": {
                "command": "cmake -GNinja -B_genDebug -H. -DBUILD_TESTING=1 -DCMAKE_TOOLCHAIN_FILE=clang-toolchain.cmake"
            }
        },
        {
            "label": "2+. Build",
            "type": "shell",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceRoot}/_genDebug"
            },
            "problemMatcher": []
        },
        {
            "label": "2. Build and test",
            "type": "shell",
            "command": "ninja;cd tests;ctest",
            "options": {
                "cwd": "${workspaceRoot}/_genDebug"
            },
            "problemMatcher": []
        }
    ]
}